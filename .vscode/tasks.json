{
    // See https://code.visualstudio.com/docs/editor/tasks for more information
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "--configuration",
                "${input:buildConfiguration}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "buildConfiguration",
            "type": "pickString",
            "description": "Select the build configuration",
            "options": [
                "Debug",
                "Release"
            ],
            "default": "Debug"
        }
    ]
}
